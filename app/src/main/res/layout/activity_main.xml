<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="ac"
                type="com.cnm.umbrellaalarm.MainActivity" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textSize="25sp"
                android:onClick="@{() -> ac.moveAddress()}"
                android:textStyle="bold"
                tools:text="서울 송파구 삼전동" />

        <ImageView
                android:id="@+id/iv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                tools:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    tools:text="19" />

        </LinearLayout>

        <TimePicker
                android:id="@+id/tp_reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numbersSelectorColor="@color/colorPrimaryDark"
                android:timePickerMode="spinner" />

        <Button
                android:id="@+id/bt_reservation"
                android:onClick="@{() -> ac.notiReservation()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예약하기" />
    </LinearLayout>
</layout>
